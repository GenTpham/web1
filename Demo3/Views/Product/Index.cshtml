@model IEnumerable<Demo3.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align: center; background-color: aquamarine;">Danh sách sản phẩm</h2>

<div class="container">
    <div class="row">
        @foreach (var pro in Model)
        {
            <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card-pro">
                    <p>@Html.DisplayFor(model => pro.ProductID)</p>
                    <img src="@Url.Content(pro.ImagePro)" height="150" width="150" />
                    <p>@Html.DisplayFor(model => pro.Name)</p>
                    <p>@Html.DisplayFor(model => pro.Price)</p>
                    <a href="/ShopCart/AddToCart/@pro.ProductID" class="btn btn-default">Buy</a>
                    @Html.ActionLink("Xóa", "Delete", new { id = pro.ProductID }, new { @class = "btn btn-danger" })
                </div>
            </div>
        }
    </div>
</div>